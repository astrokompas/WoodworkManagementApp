<Window x:Class="WoodworkManagementApp.Dialogs.ChooseProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wybierz produkt"
        Height="700"
        Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <Style x:Key="ProductTile" TargetType="Border" BasedOn="{StaticResource ProductCard}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C4B885"/>
                    <Setter Property="BorderBrush" Value="#346751"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid x:Name="RootGrid">
        <Border x:Name="MainBorder"
                BorderThickness="1" 
                BorderBrush="#346751" 
                Background="#B2A365" 
                CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Custom Title Bar -->
                <Border Background="#262319" 
                        MouseLeftButtonDown="Border_MouseLeftButtonDown"
                        CornerRadius="8,8,0,0">
                    <Grid>
                        <TextBlock Text="Wybierz produkt" 
                                 Foreground="#B2A365" 
                                 VerticalAlignment="Center" 
                                 Margin="15,0,0,0"
                                 FontSize="16"
                                 FontWeight="Medium"/>

                        <Button x:Name="CloseButton" 
                               Click="CloseButton_Click"
                               Style="{StaticResource WindowControlButton}"
                               Tag="/Resources/exit.png"
                               HorizontalAlignment="Right"/>
                    </Grid>
                </Border>

                <!-- Content -->
                <Grid Grid.Row="1" Margin="20,0,20,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search Box -->
                    <Grid Grid.Row="1" 
                          Style="{StaticResource SearchBoxContainer}"
                          HorizontalAlignment="Left"
                          Width="400"
                          Margin="0,30,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Image Source="/Resources/search.png" 
                               Width="16" 
                               Height="16" 
                               Margin="10,0,10,0"/>

                        <TextBox Grid.Column="1"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource SearchBox}">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#5A9E85"/>
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>

                        <Button Grid.Column="2"
                                Command="{Binding ClearSearchCommand}"
                                Style="{StaticResource ActionButton}"
                                Width="35" Height="35"
                                Padding="0"
                                Margin="5,0,0,0"
                                ToolTip="Wyczyść"
                                Visibility="{Binding SearchText, Converter={StaticResource StringToVisibilityConverter}}">
                            <Image Source="/Resources/clear.png" 
                                   Width="16" 
                                   Height="16"/>
                        </Button>
                    </Grid>

                    <!-- Products List -->
                    <ScrollViewer Grid.Row="2" 
                                 Style="{StaticResource ScrollViewer}"
                                 Margin="0,20,0,0">
                        <ItemsControl ItemsSource="{Binding ProductsView}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="2" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ProductTile}"
                                            Margin="5"
                                            MouseLeftButtonUp="ProductCard_MouseLeftButtonUp"
                                            Cursor="Hand">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Product Name -->
                                            <TextBlock Text="{Binding Name}"
                                                     Style="{StaticResource ProductName}"
                                                     FontSize="18"/>

                                            <!-- Price -->
                                            <StackPanel Grid.Row="1" 
                                                      Orientation="Horizontal"
                                                      Margin="0,15,0,0">
                                                <TextBlock Text="Cena: "
                                                         Style="{StaticResource ProductLabel}"
                                                         FontSize="16"/>
                                                <TextBlock Text="{Binding PricePerM3, StringFormat={}{0:N2} zł/m³}"
                                                         Style="{StaticResource ProductValue}"
                                                         FontSize="16"/>
                                            </StackPanel>

                                            <!-- Category -->
                                            <StackPanel Grid.Row="2" 
                                                      Orientation="Horizontal"
                                                      Margin="0,8,0,0">
                                                <TextBlock Text="Kategoria: "
                                                         Style="{StaticResource ProductLabel}"
                                                         FontSize="16"/>
                                                <TextBlock Text="{Binding Category}"
                                                         Style="{StaticResource ProductValue}"
                                                         FontSize="16"/>
                                            </StackPanel>

                                            <!-- Discount -->
                                            <StackPanel Grid.Row="3" 
                                                      Orientation="Horizontal"
                                                      Margin="0,8,0,0">
                                                <TextBlock Text="Rabat: "
                                                         Style="{StaticResource ProductLabel}"
                                                         FontSize="16"/>
                                                <TextBlock Text="{Binding Discount, StringFormat={}{0}%}"
                                                         Style="{StaticResource ProductValue}"
                                                         FontSize="16"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>