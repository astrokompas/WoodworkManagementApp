<Window x:Class="WoodworkManagementApp.Dialogs.PrintPreviewDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WoodworkManagementApp.Dialogs"
        mc:Ignorable="d"
        Title="Print Preview"
        Height="700"
        Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">

    <Border x:Name="MainBorder"
            BorderThickness="1" 
            BorderBrush="#346751" 
            Background="#B2A365" 
            CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Background="#262319" 
                    MouseLeftButtonDown="Border_MouseLeftButtonDown"
                    CornerRadius="8,8,0,0">
                <Grid>
                    <TextBlock Text="Print Preview" 
                             Foreground="#B2A365" 
                             VerticalAlignment="Center" 
                             Margin="15,0,0,0"
                             FontSize="16"
                             FontWeight="Medium"/>

                    <Button x:Name="CloseButton" 
                           Click="CloseButton_Click"
                           Style="{StaticResource WindowControlButton}"
                           Tag="/Resources/exit.png"
                           HorizontalAlignment="Right"/>
                </Grid>
            </Border>

            <!-- Print Preview -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <!-- Document Preview -->
                <Border Background="White" 
                        BorderBrush="#346751" 
                        BorderThickness="1"
                        CornerRadius="4">
                    <DocumentViewer x:Name="PreviewViewer"
                                  Background="White"/>
                </Border>

                <!-- Print Settings -->
                <StackPanel Grid.Column="1" Margin="20,0,0,0">
                    <!-- Printer Selection -->
                    <TextBlock Text="Printer" 
                             Style="{StaticResource InputLabel}"/>
                    <ComboBox ItemsSource="{Binding Printers}"
                             SelectedItem="{Binding SelectedPrinter}"
                             DisplayMemberPath="Name"
                             Style="{StaticResource ComboBox}"
                             Margin="0,0,0,20"/>

                    <!-- Copies -->
                    <TextBlock Text="Number of Copies" 
                             Style="{StaticResource InputLabel}"/>
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Text="{Binding Copies, UpdateSourceTrigger=PropertyChanged}"
                                Style="{StaticResource InputBox}"/>

                        <StackPanel Grid.Column="1" 
                                  Orientation="Horizontal"
                                  Margin="5,0,0,0">
                            <Button Command="{Binding DecreaseCopiesCommand}"
                                    Style="{StaticResource ActionButton}"
                                    Width="35" Height="35"
                                    Content="-"/>
                            <Button Command="{Binding IncreaseCopiesCommand}"
                                    Style="{StaticResource ActionButton}"
                                    Width="35" Height="35"
                                    Margin="5,0,0,0"
                                    Content="+"/>
                        </StackPanel>
                    </Grid>

                    <!-- Color Mode -->
                    <TextBlock Text="Color Mode" 
                             Style="{StaticResource InputLabel}"/>
                    <StackPanel Orientation="Horizontal" 
                              Margin="0,5,0,20">
                        <RadioButton Content="Black and White"
                                   IsChecked="{Binding IsBlackAndWhite}"
                                   Foreground="White"/>
                        <RadioButton Content="Color"
                                   IsChecked="{Binding IsBlackAndWhite, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   Margin="20,0,0,0"
                                   Foreground="White"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!-- Bottom Buttons -->
            <StackPanel Grid.Row="2" 
                      Orientation="Horizontal" 
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20">
                <Button Content="Print"
                        Command="{Binding PrintCommand}"
                        Style="{StaticResource ActionButton}"/>
                <Button Content="Cancel"
                        Click="CloseButton_Click"
                        Style="{StaticResource ActionButton}"
                        Margin="20,0,0,0"/>
            </StackPanel>

            <!-- Loading Panel -->
            <Grid x:Name="LoadingPanel" 
                  Visibility="Collapsed"
                  Panel.ZIndex="1000"
                  Grid.RowSpan="3">
                <Rectangle Fill="#80000000"/>
                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" 
                               Width="200" 
                               Height="2" 
                               Margin="0,0,0,10"/>
                    <TextBlock x:Name="LoadingText" 
                             Foreground="White"
                             FontSize="14"
                             TextAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>