<Window x:Class="WoodworkManagementApp.Dialogs.AddProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:validations="clr-namespace:WoodworkManagementApp.Validations"
        Title="Dodaj Produkt"
        Height="400"
        Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <Style x:Key="DialogButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Border x:Name="MainBorder"
            BorderThickness="1" 
            BorderBrush="#346751" 
            Background="#B2A365" 
            CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Background="#262319" 
                    MouseLeftButtonDown="Border_MouseLeftButtonDown"
                    CornerRadius="8,8,0,0">
                <Grid>
                    <TextBlock Text="Dodaj Produkt" 
                             Foreground="#B2A365" 
                             VerticalAlignment="Center" 
                             Margin="15,0,0,0"
                             FontSize="16"
                             FontWeight="Medium"/>

                    <Button x:Name="CloseButton" 
                           Click="CloseButton_Click"
                           Style="{StaticResource WindowControlButton}"
                           Tag="/Resources/exit.png"
                           HorizontalAlignment="Right"/>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Fields -->
                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                    <TextBlock Text="Nazwa" Style="{StaticResource InputLabel}"/>
                    <TextBox x:Name="NameTextBox"
                            Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                            Style="{StaticResource InputBox}"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Margin="0,0,0,15">
                    <TextBlock Text="Cena (m³)" Style="{StaticResource InputLabel}"/>
                    <TextBox x:Name="PriceTextBox"
                            Style="{StaticResource InputBox}">
                        <TextBox.Text>
                            <Binding Path="PricePerM3" UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <validations:DecimalValidationRule/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                </StackPanel>

                <StackPanel Grid.Row="2" Margin="0,0,0,15">
                    <TextBlock Text="Rabat (>m3)" Style="{StaticResource InputLabel}"/>
                    <TextBox x:Name="DiscountTextBox"
                            Style="{StaticResource InputBox}">
                        <TextBox.Text>
                            <Binding Path="Discount" UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <validations:DiscountValidationRule/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Grid.Row="4" 
                          Orientation="Horizontal" 
                          HorizontalAlignment="Center">
                    <Button Content="Zapisz"
                            Click="SaveButton_Click"
                            Style="{StaticResource DialogButton}"/>
                    <Button Content="Anuluj"
                            Click="CancelButton_Click"
                            Style="{StaticResource DialogButton}"
                            Margin="20,0,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>