<Page x:Class="WoodworkManagementApp.Pages.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:controls="clr-namespace:WoodworkManagementApp.UserControls"
      mc:Ignorable="d"
      Title="Zamówienia">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#625424">
            <Grid>
                <TextBlock Text="Zamówienia" 
                          FontSize="32"
                          FontWeight="Bold"
                          Foreground="White"
                          Margin="20,15"/>
            </Grid>
        </Border>

        <!-- Buttons Grid -->
        <Grid Grid.Row="1" Margin="0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Add Button -->
            <Button Grid.Column="1"
                    Command="{Binding AddOrderCommand}"
                    Style="{StaticResource ActionButton}"
                    Width="72" Height="72"
                    Padding="16"
                    HorizontalAlignment="Center"
                    ToolTip="Dodaj zamówienie">
                <Image Source="/Resources/add.png"
                       Width="32"
                       Height="32"
                       RenderOptions.BitmapScalingMode="HighQuality"/>
            </Button>

            <!-- Search Box -->
            <Grid Grid.Column="2"
                  Style="{StaticResource SearchBoxContainer}"
                  Margin="20,0,0,0"
                  Width="300"
                  VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Source="/Resources/search.png" 
                       Width="16" 
                       Height="16" 
                       Margin="10,0,10,0"/>

                <TextBox Grid.Column="1"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource SearchBox}"/>

                <Button Grid.Column="2"
                        Command="{Binding ClearSearchCommand}"
                        Style="{StaticResource ActionButton}"
                        Width="35" Height="35"
                        Padding="0"
                        Margin="5,0,0,0"
                        ToolTip="Wyczyść"
                        Visibility="{Binding SearchText, Converter={StaticResource StringToVisibilityConverter}}">
                    <Image Source="/Resources/clear.png" 
                           Width="16" 
                           Height="16"/>
                </Button>
            </Grid>
        </Grid>

        <!-- Orders List -->
        <ScrollViewer Grid.Row="2" 
                     Style="{StaticResource ScrollViewer}"
                     Margin="20,0,20,20">
            <ItemsControl ItemsSource="{Binding FilteredOrders}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource ProductCard}"
                                Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Thumbnail -->
                                <Border Grid.Column="0" 
                                        Width="120" 
                                        Height="160"
                                        Margin="0,0,15,0"
                                        Background="#262319"
                                        CornerRadius="4">
                                    <Image Source="{Binding ThumbnailPath}"
                                           Stretch="Uniform"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                </Border>

                                <!-- Order Info -->
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding OrderNumber}" 
                                             Style="{StaticResource ProductName}"
                                             FontSize="18"/>

                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" 
                                                  Text="{Binding CreationDate, StringFormat=Data utworzenia: {0:d}}" 
                                                  Style="{StaticResource ProductValue}"/>

                                        <TextBlock Grid.Column="2" 
                                                  Text="{Binding CompletionDate, StringFormat=Termin realizacji: {0}}" 
                                                  Style="{StaticResource ProductValue}"/>
                                    </Grid>

                                    <TextBlock Text="{Binding CreatorName, StringFormat=Utworzył: {0}}"
                                             Style="{StaticResource ProductValue}"
                                             Margin="0,5,0,0"/>

                                    <TextBlock Text="{Binding ReceiverName, StringFormat=Odbiorca: {0}}"
                                             Style="{StaticResource ProductValue}"
                                             Margin="0,5,0,0"/>
                                </StackPanel>

                                <!-- Action Buttons -->
                                <StackPanel Grid.Column="2" 
                                          Orientation="Vertical"
                                          Margin="10,0,0,0"
                                          VerticalAlignment="Center">
                                    <Button Command="{Binding DataContext.EditOrderCommand, 
                                            RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource ActionButton}"
                                            Width="35" Height="35"
                                            Margin="0,0,0,5"
                                            ToolTip="Edytuj">
                                        <Image Source="/Resources/edit.png"
                                               Width="16"
                                               Height="16"/>
                                    </Button>

                                    <Button Command="{Binding DataContext.DeleteOrderCommand, 
                                            RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource ActionButton}"
                                            Width="35" Height="35"
                                            Margin="0,0,0,5"
                                            ToolTip="Usuń">
                                        <Image Source="/Resources/delete.png"
                                               Width="16"
                                               Height="16"/>
                                    </Button>

                                    <Button Command="{Binding DataContext.DownloadOrderCommand, 
                                            RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource ActionButton}"
                                            Width="35" Height="35"
                                            ToolTip="Pobierz">
                                        <Image Source="/Resources/download.png"
                                               Width="16"
                                               Height="16"/>
                                    </Button>

                                    <Button Grid.Column="3"
                                            Command="{Binding OpenSettingsCommand}"
                                            Style="{StaticResource ActionButton}"
                                            Width="35" Height="35"
                                            Padding="0"
                                            HorizontalAlignment="Right"
                                            ToolTip="Ustawienia">
                                        <Image Source="/Resources/settings.png"
                                                       Width="16"
                                                       Height="16"/>
                                    </Button>
                                </StackPanel>
                                
                                <!-- Pagination -->
                                <StackPanel Grid.Row="3" 
                                            Orientation="Horizontal" 
                                            HorizontalAlignment="Center"
                                            Margin="0,20,0,0"
                                            Visibility="{Binding SearchText, Converter={StaticResource EmptyStringToVisibilityConverter}}">
                                    <Button Command="{Binding PreviousPageCommand}"
                                            Style="{StaticResource ActionButton}"
                                            Width="35" Height="35"
                                            Padding="0"
                                            Margin="0,0,10,0">
                                        <Path Data="M 12,24 L 4,16 L 12,8" 
                                              Stroke="White" 
                                              StrokeThickness="2"/>
                                    </Button>

                                    <TextBlock Text="{Binding CurrentPage}"
                                               VerticalAlignment="Center"
                                               Foreground="White"
                                               FontSize="16"
                                               Margin="10,0"/>

                                    <Button Command="{Binding NextPageCommand}"
                                            Style="{StaticResource ActionButton}"
                                            Width="35" Height="35"
                                            Padding="0"
                                            Margin="10,0,0,0">
                                        <Path Data="M 4,24 L 12,16 L 4,8" 
                                              Stroke="White" 
                                              StrokeThickness="2"/>
                                    </Button>
                                </StackPanel>

                                <!-- Loading Spinner -->
                                <controls:LoadingSpinner 
                                Grid.Column="0"
                                Grid.ColumnSpan="3"
                                IsLoading="{Binding IsLoading, Mode=OneWay}"
                                LoadingText="{Binding LoadingText, Mode=OneWay}">
                                    <controls:LoadingSpinner.Style>
                                        <Style TargetType="controls:LoadingSpinner">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsLoading}" Value="False">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </controls:LoadingSpinner.Style>
                                </controls:LoadingSpinner>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <!-- Global Loading Spinner -->
        <controls:LoadingSpinner 
        Grid.Row="0"
        Grid.RowSpan="3"
        Panel.ZIndex="9999"
        IsLoading="{Binding IsLoading, Mode=OneWay}"
        LoadingText="{Binding LoadingText, Mode=OneWay}"/>
    </Grid>
</Page>