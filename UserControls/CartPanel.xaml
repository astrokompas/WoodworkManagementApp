<UserControl x:Class="WoodworkManagementApp.UserControls.CartPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:WoodworkManagementApp.Converters"
             mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Cart Toggle Button -->
        <Button Command="{Binding ToggleCartCommand}"
                Background="#346751"
                BorderThickness="0"
                Width="40"
                Height="{Binding ActualHeight, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Grid}}}"
                VerticalAlignment="Stretch"
                Panel.ZIndex="1000">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}">
                        <Image Source="/Resources/cart.png" 
                               Width="20" Height="20"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#5A9E85"/>
                            <Setter Property="Cursor" Value="Hand"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#2A543F"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Cart Panel -->
        <Border Grid.Column="1"
                Width="400"
                Background="#262319"
                BorderBrush="#346751"
                BorderThickness="1,0,0,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                Visibility="{Binding IsCartOpen, Converter={StaticResource BooleanToVisibilityConverter}}">

            <DockPanel LastChildFill="True" Margin="20">
                <!-- Header -->
                <Grid DockPanel.Dock="Top"
                      Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Koszyk" 
                             FontSize="26"
                             FontWeight="SemiBold"
                             Foreground="#B2A365"/>

                    <Button Grid.Column="1"
                            Command="{Binding ClearCartCommand}"
                            Style="{StaticResource ActionButton}"
                            Width="40" Height="40"
                            Padding="0"
                            ToolTip="Wyczyść koszyk">
                        <Image Source="/Resources/clear-cart.png" 
                               Width="18" 
                               Height="18"/>
                    </Button>
                </Grid>

                <!-- Calculate Button -->
                <Button DockPanel.Dock="Bottom"
                        Content="Oblicz"
                        Style="{StaticResource ActionButton}"
                        Height="45"
                        FontSize="16"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Center"
                        MinWidth="150"
                        Margin="0,20,0,0"/>

                <!-- Cart Items -->
                <ScrollViewer Style="{StaticResource ScrollViewer}"
                            VerticalAlignment="Stretch">
                    <ItemsControl ItemsSource="{Binding CartItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#D7CFA0"
                                        CornerRadius="4"
                                        Margin="0,0,0,15"
                                        Padding="15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel>
                                            <TextBlock Text="{Binding ProductName}"
                                                     TextWrapping="Wrap"
                                                     FontSize="16"
                                                     FontWeight="SemiBold"
                                                     Foreground="#262319"/>
                                            <TextBlock Text="{Binding Volume, StringFormat={}{0:N3} m³}"
                                                     Margin="0,5,0,0"
                                                     FontSize="14"
                                                     FontWeight="Medium"
                                                     Foreground="#262319"/>
                                        </StackPanel>

                                        <Button Grid.Column="1"
                                                Command="{Binding DataContext.RemoveFromCartCommand, 
                                                        RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource ActionButton}"
                                                Width="30" Height="30"
                                                Padding="0">
                                            <Image Source="/Resources/delete.png" 
                                                   Width="14" 
                                                   Height="14"/>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>